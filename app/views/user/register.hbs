<form method="post" action="/user/register/done">
<div class="container register-form">
            <div class="form">
                <div class="note">
                    <p>Đăng Kí thành viên</p>
                </div>

                <div class="form-content">
                    <div class="row">

                        <div class="col-md-6">
                            <h2>Thông tin tài khoản</h2>
                            <div class="form-group">
                                <input type="text" name="username" class="form-control" placeholder="Tên Tài khoản của bạn *" value=""/>
                            </div>
                            <div class="form-group">
                                <input type="password"  class="form-control" name="password" placeholder="Password *" value=""/>
                            </div>

                        </div>
                        <div class="col-md-6">
                            <h2>Thông Tin Cá Nhân</h2>
                            <div class="form-group">
                                <input type="text" name="phone" class="form-control" placeholder="Số Điện Thoại *" value=""/>
                            </div>
                            <div class="form-group">
                                <input type="text" name="name" class="form-control" placeholder="Họ và tên" value=""/>
                            </div>
                            <div class="form-group">
                                <input type="email" name="email" class="form-control" placeholder="Email" value=""/>
                            </div>
                        </div>
                    </div>
                    <div class="submit-area">
                        <button type="submit" class="btnSubmit">Đăng Kí</button>
                    </div>

                </div>
            </div>
        </div>
</form>